{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,

    "noUnusedLocals": false, // TODO: Fix
    "noImplicitReturns": true,
    "noUnusedParameters": false, // TODO: Fix
    "noFallthroughCasesInSwitch": true,

    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
  },
  "exclude": [
      "lib",
      "examples",
      "test"
    ]
}
